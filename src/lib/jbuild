(jbuild_version 1)

(library (
  (name prohlatype)
  (public_name prohlatype)
  (synopsis "Probablistic HLA typing.")
  (libraries (
      biocaml.unix ocamlgraph nonstd parany sosa threads
      ocephes
      partition_map
      ppx_deriving_yojson.runtime yojson))
  (preprocess (pps (ppx_deriving.std ppx_deriving_yojson bisect_ppx -conditional)))
  (ocamlopt_flags -O3)
  ))

(rule
 ((targets (version.ml))
  (action
   (with-stdout-to ${@}
    (echo "let version = \"${version:prohlatype}\"")))))
